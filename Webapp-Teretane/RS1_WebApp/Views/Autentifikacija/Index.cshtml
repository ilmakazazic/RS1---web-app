@model eUniverzitet.Web.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string error_poruka = (string)TempData["error_poruka"];
    Layout = "_LayoutAnonim";
}

<div class="col-md-4 col-md-offset-4">


    <form asp-action="Login">

        <div class="form-group">
            <label>Username: </label>
            <div>
                <input asp-for="username"  class="form-control"/>
               
            </div>
        </div>

        <div class="form-group">
            <label>Password: </label>
            <div>
                <input type="password" asp-for="lozinka" class="form-control" />
            </div>
        </div>
        <input type="submit" value="Logiraj se" class="btn btn-danger form-control" />
    </form>

    @if (error_poruka != null)
    {
        <br />
        <div class="alert alert-danger">
            @error_poruka
        </div>
    }
</div>
