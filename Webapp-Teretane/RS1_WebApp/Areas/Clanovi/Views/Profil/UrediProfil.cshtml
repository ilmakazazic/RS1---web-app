@using RS1_WebApp.Areas.Clanovi.ViewModels
@model UrediProfilVM
@{
    ViewData["Title"] = "UrediProfil";
}
<style>

    .button2 {background-color: #008CBA;
               border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
    } 
</style>
<h1>Uredi svoj profil</h1>

<form asp-controller="Profil" asp-action="UrediSnimi" method="post">
    <div class="form-group">
        @Html.TextBoxFor(model => model.KorisnickoIme, new { @class = "form-control", @placeholder = "KorisnickoIme" })
        @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
     
    </div>
    <div class="form-group">
        @Html.PasswordFor(model => model.Lozinka, new { @class = "form-control", @placeholder = "Lozinka" })
        @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "E-mail" })
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

    </div>
    <input asp-for="ClanID" type="hidden" />
    <br />
    <input type="submit" value="Snimi" class="button2" />
 
</form>
