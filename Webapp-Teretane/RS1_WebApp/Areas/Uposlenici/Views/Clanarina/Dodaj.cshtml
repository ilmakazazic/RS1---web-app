@model KuponDodajVM
@{
    ViewData["Title"] = "Forma";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
<h1>Dodaj Kupon</h1>
<br />
<form asp-action="Dodaj" enctype="multipart/form-data" class="form-group">
    <div class="form-group">
        <label>KodKupona: </label>
        <input asp-for="@Model.KuponKod" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label>Postotak</label>
        <div class="input-group" style="width: 10%">
            <input asp-for="@Model.Postotak" type="number" class="form-control" /> <span class="input-group-append "><h1>%</h1></span>
        </div>
        <span asp-validation-for="Postotak" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label>Datum aktivacije: </label>
        <input asp-for="@Model.PocetakDatum" type="date" class="form-control" />

    </div>

    <div class="form-group">
        <label>Kraj kupona: </label>
        <input asp-for="@Model.KrajDatum" type="date" class="form-control" />

    </div>

    <div class="form-group">
        <label>Broj moguÄ‡ih aktivacija: </label>
        <input asp-for="@Model.Broj_Koristenja" type="number" class="form-control" />

    </div>

    <input type="hidden" asp-for="@Model.TeretanaID" />
    <button type="submit" class="btn btn-success">Snimi</button>
</form>